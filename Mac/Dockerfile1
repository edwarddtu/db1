FROM ubuntu:latest as db1_base

# Accept the build argument
ARG PROJ_DIR_NAME

# Replace shell with bash so we can source files
RUN rm /bin/sh && ln -s /bin/bash /bin/sh

# Install all the necessary packages
RUN apt-get update \
    && DEBIAN_FRONTEND=noninteractive apt-get install -y \
    wget \
    curl \
    gnupg \
    git \
    software-properties-common \
    apt-transport-https \
    x11-apps \
    sudo \
    nodejs \
    less \
    udev \
    lsof \
    nano \
    screen \
    language-pack-en-base \
    python3 \
    python3-pip \
    && apt-get -y remove xfce4-power-manager \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

#Setting up the locale
RUN echo "LANG=en_US.UTF-8" > /etc/default/locale 

#installing ampy and 
RUN pip install esptool --upgrade \
    && pip install adafruit-ampy --upgrade

# Add the Microsoft GPG key
RUN wget -qO- https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > microsoft.gpg \
    && mv microsoft.gpg /etc/apt/trusted.gpg.d/microsoft.gpg

RUN curl -fsSL https://code-server.dev/install.sh | sh

#Saving the pymakr extension on the tmp directory
RUN mkdir /home/tmp
COPY ${PROJ_DIR_NAME}/Common/* /home/tmp
#COPY pycom* /home/tmp
#COPY ms-python* /home/tmp

RUN apt-get update -y && apt-get upgrade -y

# Copy the entrypoint script into the image
COPY ${PROJ_DIR_NAME}/Mac/entrypoint.sh /entrypoint.sh

# Ensure the script is executable
RUN chmod +x /entrypoint.sh

# Expose the code-server port
EXPOSE 8080

# Start code-server
CMD ["bash"]



